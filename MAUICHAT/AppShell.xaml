<?xml version="1.0" encoding="UTF-8" ?>
<Shell
   x:Class="MAUICHAT.AppShell"
   xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
   xmlns:local="clr-namespace:MAUICHAT"
   Shell.FlyoutBehavior="Disabled">
 
    <!--As the flyout bar has been disabled, this code is no longer relevant, if you want to use the flyout bar, change "Disabled" to "Flyout".
    The flyout bar is however not working very well and wont be fixed.-->
    <ShellContent
     Title="Start page"
     ContentTemplate="{DataTemplate local:MainPage}"
     Route="MainPage" />

    <ShellContent
     Title="Chat"
     ContentTemplate="{DataTemplate local:ChatPage}"
     Route="AddPage" />

</Shell>